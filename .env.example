# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
AWS_BUCKET=streambet-demo-bucket

# Mock Mode (set to 'true' to save AWS credits during testing)
USE_MOCK_MODE=false

# Audio Analysis (Optional - for enhanced commentary with speech transcription)
# Deploy Whisper endpoint first: see AUDIO_SETUP.md
WHISPER_ENDPOINT_NAME=your-whisper-endpoint-name

# ElevenLabs Voice Commentary (Optional - converts text commentary to speech)
# Get API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your-elevenlabs-api-key
# Voice ID (default is Adam - sports announcer style)
# Browse voices at: https://elevenlabs.io/voice-library
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB

# Agent Service Configuration
WEBHOOK_URL=http://localhost:8000/api/events/detection
COLLECTION_ID=streambet-streamers

# S3 Video Configuration (Optional)
S3_BUCKET=your-streambet-bucket
S3_VIDEO_URL=https://your-streambet-bucket.s3.amazonaws.com/test.mp4

# Optional: For SNS notifications (faster processing)
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:your-account:rekognition-topic
REKOGNITION_ROLE_ARN=arn:aws:iam::your-account:role/RekognitionRole
